<Window x:Class="MovieEditor.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieEditor"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:behavior="clr-namespace:MovieEditor.Views.Behavior"
        mc:Ignorable="d"
        Title="進捗" Height="200" Width="400"
        Topmost="True"
        ui:WindowHelper.UseModernWindowStyle="True">

    <ui:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <ui:SimpleStackPanel Orientation="Horizontal" >
            <Label Content="進捗：" VerticalContentAlignment="Center" />
            <Label Content="{Binding ProgressCount}" />
            <Label Content="/"  />
            <Label Content="{Binding ProgressMaxCount}" />
        </ui:SimpleStackPanel>
        <ProgressBar Width="300" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left"
            Maximum="100" Value="{Binding ProgressRate}" />
        <Button Content="キャンセル" Command="{Binding CancelCommand}" HorizontalAlignment="Right" />
    </ui:SimpleStackPanel>

</Window>